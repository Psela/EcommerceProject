@model EcommerceProject.DataModel.Product

@if (Model.name == null)
{
  <h1>No product have been found.</h1>
}
else
{
  <h3>
    <img src=@Model.imageurl style="width:80px;height:80px" />
      <br/>
      <span class="fontface"> @Model.name <br /></span>
      <span class="fontface">£@Model.price</span>
  </h3>

}




