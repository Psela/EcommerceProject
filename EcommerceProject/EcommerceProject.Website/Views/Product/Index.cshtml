<link href='https://fonts.googleapis.com/css?family=Allan:400,700' rel='stylesheet' type='text/css'>
@model EcommerceProject.DatabaseModel.ProductData

@{ EcommerceProject.Website.Controllers.ProductController obj = new EcommerceProject.Website.Controllers.ProductController();}

<img id="img" src=@Model.imageurl style=" height:300px;width:300px" />
<div id="product">
  <h2>@Model.product_name</h2><br />
  <h4>£@Model.price</h4>
  <h5>@Model.stock left in stock</h5>
  @using (Html.BeginForm("AddToBasket", "Product",Model))
  {
    <a href="~/Basket"><input type="submit" class="btn btn-primary btn-lg" data-toggle="tooltip" title="Add to the Basket" data-placement="right" value="Add to Basket" /></a>
  }
</div>
<br />
<div id="product_description">
  <h2>Description</h2>
  @Model.description
</div>

<script>
  function addToBasket() {
    obj.AddToBasket(Model);
  }
</script>

@Styles.Render("~/Content/ProductPage.css")