@model List<EcommerceProject.DataModel.ProductData>

@if (Model.Count == 0)
{
  <h1>No products have been found.</h1>
}
else
{
  <div class="row productsview">
    @foreach (EcommerceProject.DataModel.ProductData product in Model)
    {      <div class="col-md-3">
      @Html.Partial("_PartialProductView", product);
    </div>
    }
  </div>
}
